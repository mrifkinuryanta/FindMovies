<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_placeholder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:visibility="gone">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorBackgroundSecondary" />

    <View
        android:id="@+id/view_poster"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_below="@id/view1"
        android:layout_margin="16dp"
        android:background="@color/colorPlaceholder"
        android:contentDescription="@string/title_movie" />

    <View
        android:id="@+id/view_genre_title"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/view_poster"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/view_poster"
        android:background="@drawable/corners_placeholder" />

    <View
        android:id="@+id/view_genre"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_below="@id/view_genre_title"
        android:layout_alignStart="@+id/view_genre_title"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/corners_placeholder" />

    <View
        android:id="@+id/view_date_title"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_below="@id/view_genre"
        android:layout_alignStart="@+id/view_genre"
        android:layout_marginBottom="4dp"
        android:background="@drawable/corners_placeholder" />

    <View
        android:id="@+id/view_date"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/view_date_title"
        android:layout_alignStart="@+id/view_date_title"
        android:layout_marginBottom="16dp"
        android:background="@drawable/corners_placeholder" />

    <View
        android:id="@+id/view_duration_title"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_below="@id/view_date"
        android:layout_alignStart="@+id/view_date"
        android:layout_marginBottom="4dp"
        android:background="@drawable/corners_placeholder" />

    <View
        android:id="@+id/view_runtime"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_below="@+id/view_duration_title"
        android:layout_alignStart="@+id/view_duration_title"
        android:layout_marginBottom="16dp"
        android:background="@drawable/corners_placeholder" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/view_poster"
        android:background="@color/colorBackgroundSecondary" />

    <View
        android:id="@+id/view_title_overview"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@id/view2"
        android:layout_margin="16dp"
        android:background="@drawable/corners_placeholder" />

    <View
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/view_title_overview"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/corners_placeholder" />

    <View
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/text1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/corners_placeholder" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/text2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/corners_placeholder" />
</RelativeLayout>